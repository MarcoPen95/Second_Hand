<% content_for :header do %>
    <div class="container">
      <h1 class="title">
        I tuoi acquisti
      </h1>
    </div>
<% end %>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.description %></td>
        <td><%= purchase.announcement.seller.email%></td>
        <td><%= link_to 'Show', purchase_url(purchase.id,seller: purchase.seller_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
