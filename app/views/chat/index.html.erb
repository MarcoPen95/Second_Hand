<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
      <% if buyer_signed_in? %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_buyer %>
      <% elsif seller_signed_in? %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_seller %>
      <% end %>
    <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
          <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>