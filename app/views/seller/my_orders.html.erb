<% content_for :header do %>
    <div class="container">
      <h1 class="title">
        Orders to be completed
      </h1>
    </div>
<% end %>
<table class="table table-striped">
  <thead class="thead-dark">
     <tr>
       <th colspan="2 ">Description</th>
       <th colspan="1">Purchase id</th>
       <th colspan="1">Buyer email</th>
       <th colspan="1">Buyer username</th>
       <th colspan="1"></th>
      </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.description %><th>
        <td><%= order.announcement.purchase.id%></th>
        <td><%= order.announcement.purchase.buyer.email%></th>
        <td><%= order.announcement.purchase.buyer.username%></th>
        <td><%= link_to 'Edit', edit_order_path(order) , :class=>"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
     <div class="container">
      <h1 class="title">
        Orders completed
      </h1>
    </div>
<table class="table table-striped">
  <thead class="thead-dark">
     <tr>
       <th colspan="2 ">Descrizione</th>
       <th colspan="1">Purchase id</th>
       <th colspan="1">Buyer email</th>
       <th colspan="1">Buyer username</th>
       <th colspan="1"></th>
      </tr>
  </thead>
  <tbody>
    <% @completed.each do |completed| %>
      <tr>
        <td><%= completed.description %><th>
        <td><%= completed.announcement.purchase.id%></th>
        <td><%= completed.announcement.purchase.buyer.email%></th>
        <td><%= completed.announcement.purchase.buyer.username%></th>
      </tr>
    <% end %>
  </tbody>
</table>


